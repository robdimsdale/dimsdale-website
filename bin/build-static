#!/bin/bash

# Exit immediately on error
set -e
set -x

# Gets the directory that script lives in,
# irresepctive of where it's executed from.
DIR="$( cd "$( dirname "$0" )" && pwd )"

# We expect this script to live one directory below the root
cd $DIR/..

bundle exec middleman build --clean
cp source/resume/robdimsdale-resume.html build/resume/robdimsdale-resume.html
touch build/Staticfile

mkdir -p build/.well-known
cp source/.well-known/keybase.txt build/.well-known/keybase.txt
